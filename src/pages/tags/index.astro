---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("../posts/*.md");
const allTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
const title = "tags";
---

<BaseLayout title={title}>
  <ul>
    {allTags.map((tag) => (
      <li>
        <a href={`/tags/${tag}`}>{tag}</a>
      </li>
    ))}
  </ul>
</BaseLayout>

